<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PictureActivity">

    <ImageView
        android:id="@+id/image_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/img_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="裂缝长度："
        android:layout_below="@+id/image_picture"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/img_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="裂缝最大宽度："
        android:layout_below="@id/img_len"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>

    <TextView
        android:id="@+id/img_hole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="破损类型："
        android:layout_below="@id/img_width"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>

</RelativeLayout>