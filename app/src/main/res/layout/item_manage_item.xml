<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78.67dp"
        android:orientation="horizontal"
        android:background="@drawable/manage_rectangle_shape">

        <ImageView
            android:id="@+id/ic_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_05"
            android:layout_marginTop="14.33dp"
            android:layout_marginStart="18.33dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/ic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你的名字"
                android:textColor="#000000"
                android:layout_marginStart="50dp"
                android:textSize="22dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/ic_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID : 10000001"
                android:layout_marginTop="5dp"
                android:layout_marginStart="50dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>